<Application x:Class="AMDownloader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:AMDownloader"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Style.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resources/StringResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="FontAwesomeRegular">pack://application:,,,/AM Downloader;component/Resources/Fonts/Font Awesome 5 Free-Regular-400.otf#Font Awesome 5 Free Regular</FontFamily>
            <FontFamily x:Key="FontAwesomeSolid">pack://application:,,,/AM Downloader;component/Resources/Fonts/Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid</FontFamily>

            <Style TargetType="Button">
                <Setter Property="Width"
                        Value="80" />
                <Setter Property="Height"
                        Value="25.96" />
            </Style>

            <Style TargetType="MenuItem">
                <Style.Resources>
                    <Style TargetType="Frame">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Style.Resources>
            </Style>

            <system:Boolean x:Key="TrueValue">True</system:Boolean>
            <system:Boolean x:Key="FalseValue">False</system:Boolean>

            <!--<DataTemplate DataType="{x:Type local:AddDownloadViewModel}">
                <local:AddDownloadWindow />
            </DataTemplate>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>